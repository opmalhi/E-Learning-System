                                </a>
                                <div class="collapse" id="collapseStudents" aria-labelledby="headingFour" data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        @Html.ActionLink("View Students", "ViewStudents", "Admin", new { @Class = "nav-link" })
                                    </nav>
                                    <nav class="sb-sidenav-menu-nested nav">
                                        @Html.ActionLink("Attendance", "Attendance", "Admin", new { @Class = "nav-link" })
                                    </nav>
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="">Attendance Details</a>
                                    </nav>
                                </div>*@

                                <a class="nav-link" href="/Admin/AddUser">
                                    <div class="sb-nav-link-icon"><i class="fas fa-user-plus"></i></div>
                                    Subjects
