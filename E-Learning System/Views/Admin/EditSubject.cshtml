@model E_Learning_System.Models.Subject
@{
    ViewBag.Title = "EditSubject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .container {
        width: 400px;
        margin-top: 50px;
        margin-bottom: 75px;
        padding: 25px;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
    }

    .row {
        margin-top: 15px;
        padding: 10px;
    }
</style>

@using (Html.BeginForm())
{
<div class="container p-md-4 p-sm-4">

    <h3 class="text-center">UPDATE CLASS</h3>

    <div class="row">
        <div class="col">
            @Html.HiddenFor(x => x.Subject_Id)
            @Html.LabelFor(x => x.Subject_Id, new { @Class = "text-center" })<br />
            @Html.TextBoxFor(x => x.Subject_Id, new { @Class = "form-control", disabled = "disabled", required = "required", style = "margin-top:10px;" })
        </div>
    </div>

    <div class="row">
        <div class="col">
            @Html.Label("Class", new { @Class = "text-center" })<br />
            @Html.DropDownListFor(model => model.Class_Id, ViewBag.Class_Id as SelectList, new { @class = "form-control" })
            @*@Html.DropDownList("Class_Id", ViewBag.Class_Id as SelectList, '@Model.Class_Id', new { @class = "form-control", required = "required" })*@
        </div>
    </div>

    <div class="row">
        <div class="col">
            @Html.LabelFor(x => x.Subject_Name, new { @Class = "text-center" })<br />
            @Html.TextBoxFor(x => x.Subject_Name, new { @Class = "form-control", required = "required", style = "margin-top:10px;" })
            @Html.ValidationMessageFor(x => x.Subject_Name, null, new { style = "color:red" })
        </div>
    </div>

    <div class="row">
        <div class="col">
            @Html.LabelFor(x => x.IsActive, new { @Class = "text-center", style = "margin-right:10px" })
            @Html.CheckBox("IsActive", Model.IsActive.HasValue ? Model.IsActive : false)
        </div>
    </div>

    <div class="row">
        <div class="col">
            <input type="submit" class="btn btn-outline-dark" value="Update Class" style="width:150px; float:right;" />
        </div>
    </div>

</div>
}

