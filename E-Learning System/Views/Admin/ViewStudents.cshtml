@model IEnumerable<E_Learning_System.Models.User>
@{
    ViewBag.Title = "View Students";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">

<div class="container" style="margin-top:50px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; width:1000px; padding:25px; border-radius:10px;">

    <h2 class="text-center">ALL STUDENTS</h2>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Student</th>
                <th scope="col">Class</th>
                <th scope="col">Action</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => item.User_Id)</td>
                    <td>@Html.DisplayFor(x => item.User_Name)</td>
                    <td>@Html.DisplayFor(x => item.Class.Class_Name)</td>
                    <td>@Html.ActionLink("Details", "StudentDetails", new { id = item.User_Id })</td>
                    <td>@Html.ActionLink("Edit", "EditStudent", new { id = item.User_Id })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.6.0.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
