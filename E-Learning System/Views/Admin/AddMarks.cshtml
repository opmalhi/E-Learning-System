@model E_Learning_System.Models.Exam
@{
    ViewBag.Title = "AddMarks";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<style>
    .row {
        margin: 25px 100px;
    }

    label {
        margin-bottom: 10px;
    }
</style>

@using (Html.BeginForm("AddMarks", "Admin", FormMethod.Post, new { @class = "edit-profile m-b30", enctype = "multipart/form-data" }))
{
    <div class="container p-md-4 p-sm-4">

        <h3 class="text-center">ADD MARKS</h3>

        <div class="row">
            <div class="col-6">
                @Html.Label("Class", new { @Class = "text-center" })<br />
                @Html.DropDownList("Class_Id", ViewBag.Class_Id as SelectList, "Select Class", new { @class = "form-control", required = "required" })
            </div>
            <div class="col-6">
                @Html.Label("Subject", new { @Class = "text-center" })<br />
                @Html.DropDownList("Subject_Id", ViewBag.Subject_Id as SelectList, "Select Subject", new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                @Html.LabelFor(x => x.Roll_No, new { @Class = "text-center" })<br />
                @Html.TextBoxFor(x => x.Roll_No, new { @Class = "form-control", placeholder = "Enter Roll No", type="number", required = "required" })
                @Html.ValidationMessageFor(x => x.Roll_No, null, new { style = "color:red" })
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                @Html.LabelFor(x => x.OutOfMarks, new { @Class = "text-center" })<br />
                @Html.TextBoxFor(x => x.OutOfMarks, new { @Class = "form-control", type = "number", placeholder = "Enter Obtained Marks", required = "required" })
                @Html.ValidationMessageFor(x => x.OutOfMarks, null, new { style = "color:red" })
            </div>
            <div class="col-6">
                @Html.LabelFor(x => x.TotalMarks, new { @Class = "text-center" })<br />
                @Html.TextBoxFor(x => x.TotalMarks, new { @Class = "form-control", type = "number", placeholder = "Enter Total Marks", required = "required" })
                @Html.ValidationMessageFor(x => x.TotalMarks, null, new { style = "color:red" })
            </div>
        </div>



        <div class="row">
            <div class="col">
                <input type="submit" class="btn btn-outline-dark" value="Add Marks" style="width:150px; float:right;" />
            </div>
        </div>

    </div>
}
